<input type="checkbox" id="menuToggle">

<div id="topNav">
  <label for="menuToggle" class="menu-icon">&#9776;</label>
  <img id="brandImg" draggable="false" src="/assets/attender.svg"/ />
</div>

<nav class="menu">
      <a href="/"><i class="fa fa-user" aria-hidden="true">&#160;</i>Profile</a>
      <a href="/"><i class="fa fa-book" aria-hidden="true">&#160;</i> Course</a>
      <% if current_student %>
      <%= link_to(destroy_student_session_path, :method => :delete) do %>

      <i class="fa fa-sign-out" aria-hidden="true">&#160;</i>Log Out
      <% end %>
      <% else %>
      <%= link_to(destroy_teacher_session_path, :method => :delete) do %>

      <i class="fa fa-sign-out" aria-hidden="true">&#160;</i>Log Out
      <% end %>
      <% end %>

</nav>


<% if current_teacher.present? %>


  <h1>Teacher : <%= current_teacher.first_name %> <%= current_teacher.last_name %></h1>

  <%= link_to "Create a new Course", new_course_path %>
  <br>
  <br>
  <% current_teacher.courses.each do |course| %>
     <div class="course">
      <%= link_to "Course: #{course.name}", course_path(course) %>
      <br>
      <%= link_to "Edit Course", edit_course_path(course) %>
      <br>

      <%= link_to "Delete Course", course, method: :delete, data: {confirm: "Are you sure?"} %>

    </div>
    <br>
  <% end %>
<% end %>

<% if current_student %>
  <h1>Student: <%= current_student.first_name %> <%= current_student.last_name %></h1>
  <%= hidden_field_tag(:student_id, current_student.id) %>

  <div class="course-search">
    <%= form_tag do %>
        <%= label_tag :search_course %>
        <%= text_field_tag :course_name %>
        <div class="results"></div>
        <div class="btn"></div>
    <% end %>
  </div>

  <h2>My courses</h2>
  <% current_student.courses.each do |enrolled_course| %>
    <div class="enrolled-course">
      <p><%= link_to "Course: #{enrolled_course.name}", course_path(enrolled_course) %></p>
    </div>
  <% end %>

<% end %>

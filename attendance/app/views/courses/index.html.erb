
<% if current_teacher %>
  <h3>Teacher : <%= current_teacher.first_name %> <%= current_teacher.last_name %></h3>
  <%= link_to "Create a new Course", new_course_path %>
  <% current_teacher.courses.each do |course| %>
     <div class="course">
      <%= link_to "Course: #{course.name}", course_path(course) %>
      <br>
      <%= link_to "Edit this course", edit_course_path(course) %>
      <br>
      <%= link_to "Delete this post", course, method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
    <br>
  <% end %>
<% end %>

<% if current_student %>
  <h3>Student: <%= current_student.first_name %> <%= current_student.last_name %></h3>
  <% @courses.each do |course| %>
     <div class="course">
      <%= link_to "Course: #{course.name}", course_path(course) %>
      <br>
      <%= button_to "Register in this course", register_course_path(current_student, course) %>
      <br>
    </div>
    <br>
  <% end %>
<% end %>

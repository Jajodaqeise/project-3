<%= link_to "Go back to all courses", courses_path %>

<% if current_teacher %>
  <%= link_to "Edit", edit_course_path(@course) %>
<% end %>

<h1>Course: <%= @course.name %></h1>
<p>School: <%= @course.school %></p>

<% if current_student %>
  <button id="checkin">Check in</button>
  <h1 id="message"></h1>
  <%= hidden_field_tag(:student, current_student) %>
<% end %>

<p>Description: <%= @course.description %></p>

<h3>Teacher: <%= @course.teacher.first_name %> <%= @course.teacher.last_name %></h3>

<%= hidden_field_tag(:course_id, @course.id) %>
<%= hidden_field_tag(:lat, @course.lat) %>
<%= hidden_field_tag(:lng, @course.lng) %>

<div id="map"></div>

<% if current_teacher %>
  <% @students.each do |student| %>
    <p> <%= student.first_name %> <%= student.last_name %></p>
    <p> <%= student.first_name %> <%= student.last_name %></p>
  <% end %>
<% end %>

<div id='modal'>
  <section>
    <p>Loading</p>
  </section>
</div>

